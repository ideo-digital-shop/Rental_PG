<div class="container">
  <div class="row">
<h1>Listing rentals</h1>
<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>End</th>
    <th>Device</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rentals.each do |rental| %>
  <tr>
    <td><%= rental.renter %></td>
    <td><%= mail_to rental.email %></td>
    <td><%= rental.end %></td>
    <td><%= rental.device_id %></td>
    <td><%= link_to 'Show', rental %></td>
    <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
    <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Rental', new_rental_path, :class => "btn btn-primary" %>
</div>
</div>