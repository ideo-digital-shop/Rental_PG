<h1>Listing Records</h1>

<table class="table table-condensed">
  <tr>
    <th>Renter</th>
    <th>Returned</th>
    <th>Device</th>
    <th>Days</th>
    <th>Rate</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rental_records.each do |rental_record| %>
  <tr>
    <td><%= rental_record.renter %> (<%= rental_record.email %>)</td>
    <td><%= rental_record.end %></td>
    <td><%= rental_record.device.device_id %> (<%= rental_record.device.device_type %>)</td>
    <td><%= rental_record.total_time %></td>
    <td><%= number_to_currency(rental_record.rate_daily) %></td>
    <td><%= number_to_currency(rental_record.total_price) %></td>
    <td><%= link_to 'Show', rental_record, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_rental_record_path(rental_record), :class => 'btn btn-default' %></td>
    <td><%= link_to 'Destroy', rental_record, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-inverse' %></td>
  </tr>
<% end %>
</table>

